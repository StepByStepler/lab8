<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" %>
<%= javascript_include_tag "https://code.jquery.com/jquery-3.6.0.min.js" %>
<%= javascript_pack_tag 'palindromes-ajax' %>

