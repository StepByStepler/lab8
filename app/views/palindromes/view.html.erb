<h1>Palindromes#view</h1>
<p>Find me in app/views/palindromes/view.html.erb</p>
<% if @result.present? %>
  <div id="res-table" class="container table" style="width: 30%">
    <div class="row">
      <div class="col">Номер</div>
      <div class="col">Число</div>
      <div class="col">Квадрат числа</div>
    </div>
    <% @result.each_with_index do |row, index| %>
      <div class="row">
        <div class="col"><%= index %></div>
        <div id="num-col" class="col"><%= row[:num] %></div>
        <div class="col"><%= row[:sqr] %></div>
      </div>
    <% end %>
  </div>
<% else %>
  <p id="no-number-msg">Не найдено ни одного числа-палиндрома</p>
<% end %>
<%= link_to "Вернуться", :palindromes_input %>
<%= #noinspection RailsParamDefResolve
    stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" %>
